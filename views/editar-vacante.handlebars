<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
       <input type="hidden" name="_csrf" value="{{csrfToken}}">
       <h3>Informaci贸n General</h3>

       <div class="campo">
         <label>Titulo</label>
         <input type="text" name="titulo" placeholder="Ej: React Developer" value="{{vacante.titulo}}" required>
       </div>
      {{#if errores}}
      <ul style="padding: 0; list-style-type: none;">
        {{#each errores}}
            <li style="color: #ff0000; font-size: 14px; margin-bottom: 5px; padding: 5px; border: 1px solid #ff0000; background-color: #ffe6e6; border-radius: 3px; max-width: 300px;">
                {{this.msg}}
            </li>
        {{/each}}
      </ul>
      {{/if}}

       <div class="campo">
         <label>Empresa</label>
         <input type="text" name="empresa" placeholder="Ej: Empresa Contrata" value="{{vacante.empresa}}" required>
       </div>
       <div class="campo">
         <label>Ubicac贸n</label>
         <input type="text" name="ubicacion" placeholder="Ej: Ciudad Cordoba o Remoto" value="{{vacante.ubicacion}}" required>
       </div>
        <div class="campo">
         <label>Salario (USD)</label>
         <input type="text" name="salario" placeholder="Ej: USD 1000"  value="{{vacante.salario}}">
       </div>
       <div class="campo">
        <label>Contrato</label>
         <select name="contrato">
            {{#tipoContrato vacante.contrato}}
             <option value="" disabled selected> -- Seleciona --</option>
             <option value="Freelance">Freelance</option>
             <option value="Tiempo Completo">Tiempo Completo</option>
             <option value="Medio Tiempo">Medio Tiempo</option>
             <option value="Por Proyecto">Por Proyecto</option>
            {{/tipoContrato}}
         </select>
       </div>
       <h3>Descripci贸n del puesto</h3>
       <div class="campo descripcion">
        <label>Descripci贸n</label>
        <input type="hidden" id="x" value="{{{vacante.descripcion}}}" name="descripcion">
        <trix-editor input="x"></trix-editor>
       </div>

       <h3>Conocimientos</h3>

       <ul class="lista-conocimientos">
        {{#seleccionarSkills vacante.skills}}
        {{/seleccionarSkills }}
       </ul>

       <div class="campo centrar-horizontal">
        <input type="hidden" name="skills" id="skills">
        <input type="submit" value="Publicar" class="btn btn-azul"> 
       </div>

    
    </form>
</main>